<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ui.setup.Setup">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/colorPrimary">
        <TextView
            android:id="@+id/act_setup_tv_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="ABOUT"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"></TextView>

        <View
            android:id="@+id/act_setup_hr_line_about"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_setup_tv_about"
            app:layout_constraintBottom_toTopOf="@+id/act_setup_civ_profile"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/act_setup_civ_profile"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/colorAccent"
            android:src="@mipmap/ic_add_profile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_hr_line_about"></de.hdodenhof.circleimageview.CircleImageView>

        <EditText
            android:id="@+id/act_setup_et_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="Name"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_civ_profile"></EditText>

        <EditText
            android:id="@+id/act_setup_et_designation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="Designation EX : Developer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_profile"></EditText>
        <EditText
            android:id="@+id/act_setup_et_phisolophy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="My Philosophy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_designation"></EditText>


        <TextView
            android:id="@+id/act_setup_tv_links"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="CONTACT"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_phisolophy"></TextView>

        <View
            android:id="@+id/act_setup_hr_line_contact"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_setup_tv_links"
            app:layout_constraintBottom_toTopOf="@+id/act_setup_et_email"/>

        <EditText
            android:id="@+id/act_setup_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="EMAIL ADDRESS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_hr_line_contact"></EditText>

        <EditText
            android:id="@+id/act_setup_et_github"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="Github LINK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_email"></EditText>

        <EditText
            android:id="@+id/act_setup_et_linkedin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="LINKEDIN LINK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_github"></EditText>

        <EditText
            android:id="@+id/act_setup_et_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="INSTAGRAM Link"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_linkedin"></EditText>

        <EditText
            android:id="@+id/act_setup_et_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimaryDark"
            android:textColorHint="@color/colorAccent"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:hint="FACEBOOK LINK"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_instagram"></EditText>

        <TextView
            android:id="@+id/act_setup_tv_timeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="TIMELINE"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_et_facebook"></TextView>
        <View
            android:id="@+id/act_setup_hr_line_timeline"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_setup_tv_timeline"
            app:layout_constraintBottom_toTopOf="@+id/act_setup_ll_timeline"/>
        <LinearLayout
            android:id="@+id/act_setup_ll_timeline"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimaryLight"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_hr_line_timeline">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/act_setup_rv_timeline"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="4dp"
                tools:listitem="@layout/timeline_card"
                android:orientation="horizontal"
                android:layout_weight="1" />
            <Button
                android:id="@+id/act_setup_btn_timeline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/ic_add_button"
                android:layout_weight="1"/>
        </LinearLayout>

        <TextView
            android:id="@+id/act_setup_tv_projects"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:text="PROJECTS"
            android:textColor="@color/colorAccent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_ll_timeline"></TextView>
        <View
            android:id="@+id/act_setup_hr_line_projects"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorAccent"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/act_setup_tv_projects"
            app:layout_constraintBottom_toTopOf="@+id/act_setup_ll_project"/>
        <LinearLayout
            android:id="@+id/act_setup_ll_project"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorPrimaryLight"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/act_setup_hr_line_projects">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/act_setup_rv_projects"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="4dp"
                tools:listitem="@layout/setup_project_card"
                android:orientation="horizontal"
                android:layout_weight="1"/>
            <Button
                android:id="@+id/act_setup_btn_project"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/ic_add_button"
                android:layout_weight="1"/>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>